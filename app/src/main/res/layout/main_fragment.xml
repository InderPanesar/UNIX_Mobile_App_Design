<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ebony_clay"
    tools:context=".ui.main.MainFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/leafImageLandingPage"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            android:src="@drawable/leaf" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/landingPageTitle"
            android:fontFamily="@font/supra_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:letterSpacing="1.25"
            android:gravity="center"
            android:text="@string/unix"
            android:textColor="@color/titan_white" />

        <TextView
            android:id="@+id/landingPageDescription"
            android:fontFamily="@font/supra_normal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/landing_page_description"
            android:textColor="@color/mid_gray" />

        <TextView
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:id="@+id/getStartedButton"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:textSize="18sp"
            android:letterSpacing="0.1"
            android:textColor="@color/titan_white"
            android:fontFamily="@font/supra_bold"
            android:backgroundTint="@color/ebony_clay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/landing_page_cta_text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>